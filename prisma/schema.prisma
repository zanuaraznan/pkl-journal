generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            String           @id @default(cuid())
  email         String           @unique
  password      String
  role          String           @default("user")
  siswa         Siswa?    
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt

}

model Siswa {
  id_siswa      String      @id @default(cuid())
  id_user       String      @unique
  nama          String
  nisn          String      @unique
  alamat        String?
  id_intern     String?
  user          User        @relation(fields: [id_user], references: [id], onDelete: Cascade)
  pkl           Internship? @relation(fields: [id_intern], references: [id_intern])
  journal       Journal[]
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

model Internship {
  id_intern     String           @id @default(cuid())
  nama          String
  alamat        String?
  siswa         Siswa[]
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt
}

model Journal {
  id_journal    String      @id @default(cuid())
  id_siswa      String      
  tanggal       DateTime   
  teks          String
  siswa         Siswa       @relation(fields: [id_siswa], references: [id_siswa])
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}